<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					x:Class="Calc307.MainWindow"
					>
	<Style x:Key="Actions">
		<EventSetter Event="Button.Click" Handler="Action_Click"/>
		<Setter Property="Button.FontSize" Value="30"/>
		<Setter Property="Button.Margin" Value="5"/>
		<Setter Property="Button.Background" Value="Aquamarine"/>
		<Setter Property="Button.Foreground" Value="Blue"/>
	</Style>
	<Style TargetType="Button">
		<Setter Property="Button.FontSize" Value="30"/>
		<Setter Property="Button.Margin" Value="5"/>
		<Setter Property="Button.Background">
			<Setter.Value>
				<LinearGradientBrush>
					<LinearGradientBrush.GradientStops>
						<GradientStop Color="LightSkyBlue" Offset="0"/>
						<GradientStop Color="White" Offset="0.5"/>
						<GradientStop Color="PaleGreen" Offset="1"/>
					</LinearGradientBrush.GradientStops>
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<EventSetter Event="Click" Handler="Number_Click"/>
		<Setter Property="Button.Foreground" Value="DarkRed"/>
	</Style>
	<Style x:Key="Clear" BasedOn="{StaticResource Actions}">
		<EventSetter Event="Button.Click" Handler="Clear_Click"/>
	</Style>
	<Style x:Key="Result" BasedOn="{StaticResource Actions}">
		<EventSetter Event="Button.Click" Handler="Result_Click"/>
		<Setter Property="Button.FontWeight" Value="ExtraBlack"/>
	</Style>
</ResourceDictionary>