<Window x:Class="Calc307.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc307"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="400">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<TextBox x:Name="InOutput" IsReadOnly="True" Text="0" FontSize="48" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" TextAlignment="Right" VerticalAlignment="Center"/>
		<Button Content="C" Grid.Column="0" Grid.Row="1" FontSize="30" Click="Clear_Click"/>
		<Button Content="÷" Grid.Column="3" Grid.Row="1" FontSize="30" Click="Action_Click"/>
		<Button Content="7" Grid.Column="0" Grid.Row="2" FontSize="30" Click="Number_Click"/>
		<Button Content="8" Grid.Column="1" Grid.Row="2" FontSize="30" Click="Number_Click"/>
		<Button Content="9" Grid.Column="2" Grid.Row="2" FontSize="30" Click="Number_Click"/>
		<Button Content="×" Grid.Column="3" Grid.Row="2" FontSize="30" Click="Action_Click"/>
		<Button Content="4" Grid.Column="0" Grid.Row="3" FontSize="30" Click="Number_Click"/>
		<Button Content="5" Grid.Column="1" Grid.Row="3" FontSize="30" Click="Number_Click"/>
		<Button Content="6" Grid.Column="2" Grid.Row="3" FontSize="30" Click="Number_Click"/>
		<Button Content="-" Grid.Column="3" Grid.Row="3" FontSize="30" Click="Action_Click"/>
		<Button Content="1" Grid.Column="0" Grid.Row="4" FontSize="30" Click="Number_Click"/>
		<Button Content="2" Grid.Column="1" Grid.Row="4" FontSize="30" Click="Number_Click"/>
		<Button Content="3" Grid.Column="2" Grid.Row="4" FontSize="30" Click="Number_Click"/>
		<Button Content="+" Grid.Column="3" Grid.Row="4" FontSize="30" Click="Action_Click"/>
		<Button Content="±" IsEnabled="False" Grid.Column="0" Grid.Row="5" FontSize="30" Click="Number_Click"/>
		<Button Content="0" Grid.Column="1" Grid.Row="5" FontSize="30" Click="Number_Click"/>
		<Button Content="," Grid.Column="2" Grid.Row="5" FontSize="30" Click="Number_Click"/>
		<Button Content="=" Grid.Column="3" Grid.Row="5" FontSize="30" Click="Result_Click"/>
	</Grid>
</Window>
