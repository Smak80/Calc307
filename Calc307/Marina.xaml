<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="Buttons">
		<Setter Property="Button.FontSize" Value="30"/>
		<Setter Property="Button.Margin" Value="5"/>
	</Style>
	<Style x:Key="Actions" BasedOn="{StaticResource Buttons}">
		<Setter Property="Button.FontSize" Value="30"/>
		<Setter Property="Button.Margin" Value="5"/>
		<Setter Property="Button.Background" Value="LightPink"/>
		<Setter Property="Button.Foreground" Value="DarkRed"/>
	</Style>
	<Style TargetType="Button" BasedOn="{StaticResource Buttons}">
		<Setter Property="Button.FontSize" Value="30"/>
		<Setter Property="Button.Margin" Value="5"/>
		<Setter Property="Button.Background">
			<Setter.Value>
				<LinearGradientBrush>
					<LinearGradientBrush.GradientStops>
						<GradientStop Color="LightBlue" Offset="0"/>
						<GradientStop Color="White" Offset="0.5"/>
						<GradientStop Color="LightPink" Offset="1"/>
					</LinearGradientBrush.GradientStops>
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property="Button.Foreground" Value="DarkRed"/>
	</Style>
	<Style x:Key="Result" BasedOn="{StaticResource Actions}">
		<Setter Property="Button.FontWeight" Value="ExtraBlack"/>
	</Style>
</ResourceDictionary>